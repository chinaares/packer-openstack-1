{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7/ks-news.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 4096,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
	"headless": true,
      "http_directory": "http",
      "iso_url": "{{user `mirror`}}/7.0.1406/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
      "iso_checksum": "df6dfdd25ebf443ca3375188d0b4b7f92f4153dc910b17bccc886bd54a7b7c86",
      "iso_checksum_type": "sha256",
      "shutdown_command": "echo 'cloud-user'|sudo -S /sbin/halt -h -p",
      "ssh_password": "unsecurepass",
      "ssh_port": 22,
      "ssh_username": "cloud-user",
      "ssh_wait_timeout": "10000s",
"output_directory": "virtualbox",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "virtualbox_version_file": ".vbox_version"
    },
    {
"type":"qemu",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7/ks-new.cfg<enter><wait>"
      ],
      "iso_url": "{{user `mirror`}}/7.0.1406/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
      "iso_checksum": "df6dfdd25ebf443ca3375188d0b4b7f92f4153dc910b17bccc886bd54a7b7c86",
      "iso_checksum_type": "sha256",
      "boot_wait": "10s",
      "disk_size": 4096,
    "accelerator": "kvm",
    "disk_size": 4096,
    "format": "qcow2",
"output_directory": "qemu",
    "headless": true,
      "http_directory": "http",
    "ssh_username": "root",
    "ssh_password": "unsecurepass",
    "ssh_port": 22,
    "ssh_wait_timeout": "10000s",
    "shutdown_command": "echo 'cloud-user'|sudo -S /sbin/shutdown -hP now",
    "qemuargs": [
          [ "-m", "1024m" ]]
    }
  ],
  "provisioners": [
  {
  "type": "file",
  "source": "scripts/common.sh",
  "destination": "/tmp/common.sh"
  },
  {
  "type": "file",
  "source": "files/centos/c7-cloud.cfg",
  "destination": "/tmp/cloud.cfg"
  },
  {
  "type": "file",
  "source": "scripts/firstboot.sh",
  "destination": "/tmp/firstboot.sh"
  },
  {
  "type": "shell",
      "execute_command": "echo 'cloud-user' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
  "scripts": [
  "scripts/growroot.sh",
  "scripts/openstack-yum7.sh",
  "scripts/cleanup.sh"
   ]
  }
  ],
  "variables": {
    "chef_version": "provisionerless",
    "mirror": "http://mirrors.kernel.org/centos"
  }
}
